<%= form_with(model: diary, local: true) do |form| %>
  <% if diary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(diary.errors.count, "error") %> prohibited this diary from being saved:</h2>

      <ul>
      <% diary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date %>

    <%= form.label :high_light %>
    <%= form.text_area :high_light %>

    <%= form.label :concentration %>
    <%= form.number_field(:concentration, in: 1..10, step: 1) %>

    <%= form.label :diary, :energy %>
    <%= form.number_field(:energy, in: 1..10, step: 1) %>

    <%= form.label :reflection %>
    <%= form.text_area :reflection %>

    <%= form.label :thanks %>
    <%= form.text_area :thanks %>


  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
